@model CleanArchitecture.WebUI.Features.WeatherForecast.WeatherForecastViewModel

@{
    ViewData["Title"] = "Home Page";
}

<main class="govuk-main-wrapper " id="main-content" role="main">
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
            @*<h1 class="govuk-heading-l">
                Weather Forcast
            </h1>*@

			<table class="govuk-table">
				<caption class="govuk-table__caption govuk-table__caption--m">Weather Forcasts</caption>
				<thead class="govuk-table__head">
				<tr class="govuk-table__row">
					<th scope="col" class="govuk-table__header">Summary</th>
					<th scope="col" class="govuk-table__header">Date</th>
					<th scope="col" class="govuk-table__header">Temperature (centigrade / fahrenheit)</th>
					
				</tr>
				</thead>
				<tbody class="govuk-table__body">
					@foreach(var item in Model.WeatherForecasts)
					{
						<tr class="govuk-table__row">
							<th scope="row" class="govuk-table__header">@item.Summary</th>
							<td class="govuk-table__cell">@item.Date.ToShortDateString()</td>
							<td class="govuk-table__cell">@($"{item.TemperatureC}C - {item.TemperatureF}F")</td>
						</tr>
					}
				</tbody>
			</table>
        </div>
    </div>
</main>
